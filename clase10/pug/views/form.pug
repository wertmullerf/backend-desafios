html
    head
        title Upload a product
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body 
        form(action="/products" method="POST" class="d-flex justify-content-center align-items-center flex-column" style="height: 100vh") 
            div(class="mb-3")
                label Product name
                input(type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="title")
            div(class="mb-3")
                label Product price
                input(type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="price")
            div(class="mb-3")
                label Product thumbnail
                input(type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="thumbnail")
            button(type="submit" class="btn btn-primary") Upload product
            a(href="/products" class="btn btn-dark mt-2") View products